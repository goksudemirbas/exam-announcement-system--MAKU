@model List<ProjeS.Models.Sinavİlan>
@{
    Layout = null;


    ProjeS.Models.SinavİlanEntities data = new ProjeS.Models.SinavİlanEntities();

}



<!doctype html>
<html lang="en">
<head>
    <title>Sınav Duyuru</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link href="/İlanWeb/images/logo.jpg" rel="icon">
    <link href="/İlanWeb/images/apple-touch-icon.png" rel="apple-touch-icon">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/İlanWeb/css/style.css">

</head>
<body>

    <header id="">

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">


                <a href="/Giris/Index" class="btn btn-info">Sisteme Giriş Yap</a>

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h1 class="heading-section">Sınav İlan Alanı</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <div class="table-wrap">
                        <table class="table">
                            <thead class="thead-primary">
                                <tr>


                                    <th>Ders Adı</th>
                                    <th>Bölüm Adı</th>
                                    <th>Salon Adı</th>
                                    <th>Tarih</th>
                                    <th>Saat</th>
                                    <th>Açıklama</th>

                                </tr>
                            </thead>
                            @try
                            {
                                foreach (var k in Model)
                                {

                                    <tr>

                                        <td>
                                            @data.Ders.Where(s => s.DersId == k.DersId).FirstOrDefault().DersAdi
                                        </td>
                                        <td>
                                            @k.Ders.Bolums.BolumAdi
                                        </td>
                                        <td>
                                            @data.Salons.Where(s => s.salonId == k.salonId).ToList()[0].salonAdi
                                        </td>
                                        <td>
                                            @k.tarih
                                        </td>
                                        <td>
                                            @data.Saats.Where(s => s.saatId == k.saatId).FirstOrDefault().saat
                                        </td>
                                        <td>@k.açıklama</td>
                                    </tr>
                                }
                            }
                            catch (Exception e)
                            {


                            }
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/İlanWeb/js/jquery.min.js"></script>
    <script src="/İlanWeb/js/popper.js"></script>
    <script src="/İlanWeb/js/bootstrap.min.js"></script>
    <script src="/İlanWeb/js/main.js"></script>

</body>
</html>


