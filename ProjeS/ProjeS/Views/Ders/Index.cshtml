
@model List<ProjeS.Models.Ders>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ProjeS.Models.SinavİlanEntities data = new ProjeS.Models.SinavİlanEntities();

}


<table class="table table-bordered" style="margin-top:20px">
    <tr>

        <th>Ders Adı</th>
        <th>Bölüm Adı</th>
       
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {

<tr>
    
    <td>
        @k.DersAdi
    </td>

    <td>
      @k.Bolums.BolumAdi
    </td>

    
    <td><a href="/Ders/DersSil/@k.DersId" class="btn btn-danger">Sil</a></td>
    <td><a href="/Ders/DersGetir/@k.DersId" class=" btn btn-success">Güncelle</a></td>
</tr>
    }
</table>
<a href="/Ders/DersEkle" class="btn btn-primary">Ders Ekle</a>